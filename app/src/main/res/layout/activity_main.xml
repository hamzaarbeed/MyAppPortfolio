<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:padding="4dp"
        android:text="@string/my_nanodegree_apps"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/popular_movies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_margin="4dp"
        android:background="#2E3d49"
        android:gravity="center"
        android:onClick="response"
        android:padding="8dp"
        android:text="@string/popular_movies"
        android:textAllCaps="true"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/stock_hawk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/popular_movies"
        android:layout_margin="4dp"
        android:background="#2E3d49"
        android:gravity="center"
        android:onClick="response"
        android:padding="8dp"
        android:text="@string/stock_hawk"
        android:textAllCaps="true"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/build_it_bigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/stock_hawk"
        android:layout_margin="4dp"
        android:background="#2E3d49"
        android:gravity="center"
        android:onClick="response"
        android:padding="8dp"
        android:text="@string/build_it_bigger"
        android:textAllCaps="true"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/make_your_app_material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/build_it_bigger"
        android:layout_margin="4dp"
        android:background="#2E3d49"
        android:gravity="center"
        android:onClick="response"
        android:padding="8dp"
        android:text="@string/make_your_app_material"
        android:textAllCaps="true"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/go_obiquitous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/make_your_app_material"
        android:layout_margin="4dp"
        android:background="#2E3d49"
        android:gravity="center"
        android:onClick="response"
        android:padding="8dp"
        android:text="@string/go_obiquitous"
        android:textAllCaps="true"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/capstone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/go_obiquitous"
        android:layout_margin="4dp"
        android:background="#2E3d49"
        android:gravity="center"
        android:onClick="response"
        android:padding="8dp"
        android:text="@string/capstone"
        android:textAllCaps="true"
        android:textColor="#FFFFFF" />


</RelativeLayout>
